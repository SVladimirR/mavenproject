<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog logicalFilePath="db.changelog-1.0.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-product-table" author="qwe">
        <createTable tableName="product1">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="readFromFile" author="qwe">
        <loadData tableName="product1"
                  file="db/changelog/update/product.csv"
                  separator="," >
            <column header="name" name="name" type="STRING"/>
            <column header="price" name="price" type="DECIMAL"/>
        </loadData>
    </changeSet>

    <changeSet id="create_basket_table" author="qwe" >
        <createTable tableName="basket1">
            <column name = "id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_name" type="VARCHAR(200)"/>
<!--            <column name="description" type="VARCHAR(200)"/>-->
            <column name="cost" type="DECIMAL"/>
        </createTable>
<!--    </changeSet>-->

